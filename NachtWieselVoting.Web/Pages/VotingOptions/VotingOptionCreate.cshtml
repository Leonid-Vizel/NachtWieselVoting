@page "/Voting/{votingId:int}/Option/Create"
@model VotingOptionCreateModel
@{
    ViewData["Title"] = "Добавление опции голосования";
}

<form method="post">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h2 class="mb-0">@ViewData["Title"]</h2>
        <div>
            <a class="btn btn-secondary" href="/Voting/@Model.VotingId">Назад к голосованию</a>
            <button class="btn btn-success">Сохранить</button>
        </div>
    </div>

    <hr class="my-1" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" placeholder="Название" />
        <span asp-validation-for="Name" class="text-danger" />
    </div>
</form>

@section Scripts {
    <Partial name="_ValidationScriptsPartial" />
}