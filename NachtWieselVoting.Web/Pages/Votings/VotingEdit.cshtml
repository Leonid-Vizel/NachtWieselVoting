@page "/Voting/{id:int}/Edit"
@model VotingEditModel
@{
    ViewData["Title"] = "Изменение голосования";
}

<form method="post">
    <div class="d-flex justify-content-between align-items-center mb-2">
        <h2 class="mb-0">Изменение голосования</h2>
        <div>
            <a class="btn btn-secondary" href="/Votings">Назад к списку</a>
            <button class="btn btn-warning">Сохранить</button>
        </div>
    </div>

    <hr class="my-1" />

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input asp-for="Name" class="form-control" placeholder="Название" />
        <span asp-validation-for="Name" class="text-danger" />
    </div>
    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <textarea asp-for="Description" class="form-control" placeholder="Описание"></textarea>
        <span asp-validation-for="Description" class="text-danger" />
    </div>
    <div class="mb-3">
        <label asp-for="EndTime" class="form-label"></label>
        <input asp-for="EndTime" class="form-control" />
        <span asp-validation-for="EndTime" class="text-danger" />
    </div>
    <div class="mb-3">
        <input asp-for="Multiple" class="form-check-input" />
        <label asp-for="Multiple" class="form-check-label"></label>
    </div>
</form>

@section Scripts {
    <Partial name="_ValidationScriptsPartial" />
}