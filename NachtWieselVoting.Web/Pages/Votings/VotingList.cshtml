@page "/Votings"
@model VotingListModel
@{
    ViewData["Title"] = "Список активных голосований";
}

<div class="d-flex justify-content-between align-items-center mb-2">
    <h2 class="mb-0">Список активных голосований</h2>
    <a class="btn btn-success" href="/Voting/Create">Создать</a>
</div>

<hr class="my-1" />

@if (Model.List.Count == 0)
{
    <h4>К сожалению активных голосований нет :(</h4>
    <h5>Будьте первым!</h5>
    return;
}

@foreach (var item in Model.List)
{
    <div class="p-3 my-2 shadow w-100 rounded-3">
        <div class="d-flex justify-content-between">
            <h5>
                <span class="text-secondary">[ID:@item.Id]</span>
                <span class="mx-2">@item.Name</span>
            </h5>
            <a class="btn btn-success" href="/Voting/@item.Id">Перейти</a>
        </div>
    </div>
}